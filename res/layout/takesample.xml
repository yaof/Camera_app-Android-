<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/image_filter_title_bg"
            android:gravity="center_vertical" >
        <Button
                android:onClick="imagefilter_cancelHandler"
                android:id="@+id/imagefilter_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:background="@drawable/image_filter_title_text_btn_bg"
                android:text="Cancle"
                android:textColor="#ffffff" />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Take Sample Image"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
        </LinearLayout>

        <Button
                android:onClick="imagefilter_saveHandler"
                android:id="@+id/imagefilter_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:background="@drawable/image_filter_title_text_btn_bg"
                android:text="Save"
                android:textColor="#ffffff" />
    </LinearLayout>
    <FrameLayout
            android:id="@+id/imagefilter_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/black_dot_bg"
            android:padding="20dip" >


    </FrameLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_filter_title_bg"
            android:orientation="horizontal"
            android:paddingTop="4dip" >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="invisible" />
        <Button
                android:onClick="imagefilter_takeHandler"
                android:id="@+id/imagefilter_take"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/title_photo_button"
                android:text="Take Picture"
                android:textColor="#ffffff"
                android:textSize="14sp" />




        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="invisible" />
    </LinearLayout>


</LinearLayout>